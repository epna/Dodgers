        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_margin="3dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"

            android:scaleType="centerInside"
            android:src="@drawable/dodgers" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lesdexugauge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <com.github.capur16.digitspeedviewlib.DigitSpeedView
            android:id="@+id/home_Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            app:backgroundColor="@color/md_blue_500"
            app:disableBackgroundImage="false"
            app:showUnit="true"
            app:speed="0"
            app:speedTextColor="@color/md_blue_300"
            app:speedTextSize="25dp"
            app:unit="Knts"
            app:unitTextColor="@color/md_blue_300"
            app:unitTextSize="10dp">


        </com.github.capur16.digitspeedviewlib.DigitSpeedView>

        <com.github.capur16.digitspeedviewlib.DigitSpeedView
            android:id="@+id/home_fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            app:backgroundColor="@color/md_blue_500"
            app:disableBackgroundImage="false"
            app:showUnit="true"
            app:speed="0"
            app:speedTextColor="@color/md_white_1000"
            app:speedTextSize="25dp"
            app:unit="L"
            app:unitTextColor="@color/md_white_1000"
            app:unitTextSize="10dp" />

    </LinearLayout>




